{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "plugins": [{ "name": "typescript-plugin-css-modules"}],
    "downlevelIteration": true,
    "importHelpers": true,
    // "paths": {
    //   "@app/init": ["src/app/struct"],
    //   "@app/store": ["src/app/store"],
    //   "@app/hooks": ["src/app/hooks"],
    //   "@app/api/*": ["src/app/api/*"],
    //   "@app/core/*": ["src/core/*"],
    //   "@app/utils": ["src/utils"],
    //   "@app/registry/*": ["src/modules/Registry/*"]
    // }
  },
  "include": [
    "src/index.tsx",
    "global.d.ts"
  ]
}
